<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountriesActivity" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/countries_header"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
		<TextView
		    android:id="@+id/countries_text"
	    	android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left"
		    android:layout_weight="1"
			android:text="@string/countries_title"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Button
		    android:id="@+id/countries_reload"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="right"
		    android:text="@string/countries_reload_text" />
	</LinearLayout>

	<ListView
		android:id="@+id/countries_list"
		android:layout_below="@id/countries_header"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

</RelativeLayout>
